{% extends "layout.njk" %}

{% block head %}
  <title>Portfolio - José Bezerra</title>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
        rel="stylesheet"> 
{% endblock %}

{% block content %}

<div id="wrapper">
    <h1>Aulas</h1>
</div>

<section class="cards" >
  {% for item in itens %}
    <div class="card" id="{{item.id}}">
      <div class="card_image-container {{'featured-wrapper' if item.featured}}"">
        <img src="https://img.youtube.com/vi/{{item.id}}/maxresdefault.jpg" alt="Imagem de {{item.title}}">
        {% if item.featured %}
          <div class="featured">Featured</div>
        {% endif %}
      </div>

      <div class="card-content">
        <p>{{item.title}}</p>
      </div>

      <div class="card-info">
        <p>{{item.duration}}</p>
        <p class="card-price">{{item.price}}</p>
      </div>

    </div>
  {% endfor %}
</section>

<div class="modal-overlay">
  <div class="modal">
      <a class="close-modal">
        <i class="material-icons">close</i>
      </a>
      <div class="content-modal">
        <!--vídeo aqui-->
        <!-- <iframe src="https://www.youtube.com/embed/GykTLqODQuU" frameborder="0"></iframe> -->
        <!--Vamos trocar o vídeo com o JavaScript-->
        <iframe src="" frameborder="0"></iframe>
      </div>
  </div>
</div>

<script src="script.js"></script>

{% endblock %}



        
    